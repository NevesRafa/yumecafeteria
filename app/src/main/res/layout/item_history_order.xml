<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/complete_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Pedido concluído - N°0001"
            app:layout_constraintBottom_toBottomOf="@id/ic_check"
            app:layout_constraintStart_toEndOf="@id/ic_check"
            app:layout_constraintTop_toTopOf="@id/ic_check" />

        <ImageView
            android:id="@+id/badge_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/shape_badge_quantity"
            app:layout_constraintBottom_toTopOf="@id/more_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_check" />

        <TextView
            android:id="@+id/badge_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/badge_quantity"
            app:layout_constraintEnd_toEndOf="@id/badge_quantity"
            app:layout_constraintStart_toStartOf="@id/badge_quantity"
            app:layout_constraintTop_toTopOf="@id/badge_quantity" />

        <TextView
            android:id="@+id/product_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/abeezee"
            android:text="Cappuccino"

            app:layout_constraintBottom_toBottomOf="@id/badge_quantity"
            app:layout_constraintStart_toEndOf="@id/badge_quantity"
            app:layout_constraintTop_toTopOf="@id/badge_quantity" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/badge_quantity_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:visibility="visible"
            app:constraint_referenced_ids="badge_quantity, badge_quantity_text, product_order_name" />

        <TextView
            android:id="@+id/more_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/abeezee"
            android:text="mais 1 item"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/badge_quantity" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>